<div class="ui raised segment items-display">
  {{#each items as |item|}}
  <section data-id="{{item._id}}">
    <span class="list-name">{{limit item.name 25}}</span><span class="list-quantity">{{item.quantity}}</span>
    <div>
      <span><i data-id="{{item.id}}" class="icon trash alternate outline delete-btn"></i><i data-id="{{item.id}}"
          class="icon edit outline update-btn-link"></i></span>
    </div>
    <hr>
  </section>
  {{/each}}
</div>